<div class="col-md-4 col-md-offset-4">
  <h2>Create a product</h2>
  <hr>
  <%= simple_form_for [:admin, @product] do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :quantity %>
    <%= f.input :price %>
    <%= f.input :image, as: :file %>
    <%= f.submit "Submit", class: "btn btn-sm btn-primary"%>
  <% end %>
</div>
